<Window x:Class="Google_Bookmarks_Manager_for_GPOs.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:Google_Bookmarks_Manager_for_GPOs"
        Title="Google Bookmarks for GPO" Height="500" Width="850"
        Icon="/book.png"
        TextElement.FontWeight="Medium"
        TextElement.FontSize="14"
        FontFamily="{materialDesign:MaterialDesignFont}"
        Background="{DynamicResource MaterialDesignPaper}">

    <Window.Resources>
        <local:FolderIconConverter x:Key="FolderIconConverter"/>
        <local:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>

    <Grid>
        <!-- ✅ Define Columns Properly -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ✅ Bookmark URL Input -->
        <Label Grid.Row="0" Grid.Column="0" Content="Bookmark URL:" Margin="5"
               Foreground="White"/>


        <!-- ✅ TreeView for Nested Bookmarks -->
        <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="4"
                Background="Black" BorderBrush="White" BorderThickness="1">
            <TreeView x:Name="BookmarksTreeView" ItemsSource="{Binding Bookmarks}" 
          AllowDrop="True"
          Foreground="White"
          Background="Black"
          BorderBrush="White"
          BorderThickness="1">
                <TreeView.ItemTemplate>
                    <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Name}" Margin="5,0,0,0" Foreground="White"/>

                            <!-- Only show TextBox for items that are NOT folders -->
                            <TextBox Text="{Binding Url, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         Width="300" Margin="10,0,0,0"
                         Background="White" Foreground="Black"
                         Visibility="{Binding IsFolder, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=True}"/>
                        </StackPanel>
                    </HierarchicalDataTemplate>
                </TreeView.ItemTemplate>
            </TreeView>



        </Border>

        <!-- ✅ Bookmark Folder Name Input -->
        <Label Grid.Row="2" Grid.Column="0" Content="Bookmark Folder Name:" Margin="5"
               Foreground="White"/>
        <TextBox Grid.Row="2" Grid.Column="1" x:Name="bookmarkFolderNameTextBox" Margin="5"
                 Grid.ColumnSpan="3" Background="Black" Foreground="White"/>

        <!-- ✅ Buttons -->
        <Button Grid.Row="3" Grid.Column="0" x:Name="exportBookmarksButton" Content="Export Bookmarks"
                Margin="5" Click="exportBookmarksButton_Click_1"
                Background="Purple" Foreground="White" BorderBrush="White"/>

        <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Left">
            <Button x:Name="importBookmarksButton" Content="Import Bookmarks" Margin="5"
                    Click="importBookmarksButton_Click"
                    Background="Purple" Foreground="White" BorderBrush="White"/>
            <Button x:Name="clearFormButton" Content="Clear Form" Margin="5"
                    Click="clearFormButton_Click"
                    Background="Purple" Foreground="White" BorderBrush="White"/>
        </StackPanel>

        <Button Grid.Row="3" Grid.Column="2" x:Name="exportClipboardButton" Content="Export Clipboard"
                Margin="5" Click="Button_Click"
                Background="Purple" Foreground="White" BorderBrush="White"
                HorizontalAlignment="Right"/>

        <CheckBox Grid.Row="3" Grid.Column="3" x:Name="darkModeCheckBox" Content="Dark Mode"
                  Margin="5" Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked"
                  Foreground="White"/>
    </Grid>
</Window>
